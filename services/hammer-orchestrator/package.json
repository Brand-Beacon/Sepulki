{
  "name": "@sepulki/hammer-orchestrator",
  "version": "1.0.0",
  "description": "GraphQL API gateway and fleet orchestration service for Sepulki platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:tdd": "jest --watch --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "schema": "graphql-codegen --config codegen.yml",
    "db:test": "NODE_ENV=test npm run test"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@sepulki/shared-types": "file:../../packages/shared-types",
    "@types/express-rate-limit": "^5.1.3",
    "@types/multer": "^2.0.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "graphql": "^16.8.0",
    "graphql-scalars": "^1.22.0",
    "graphql-subscriptions": "^3.0.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jose": "^5.1.0",
    "multer": "^2.0.2",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
