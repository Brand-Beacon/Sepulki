# Deployment Validation Environment Variables

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host.neon.tech/sepulki?sslmode=require

# Redis (Upstash)
REDIS_URL=rediss://default:password@host.upstash.io:6379

# Frontend (Vercel)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Backend Services (Railway)
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://hammer-orchestrator-production.up.railway.app/graphql
NEXT_PUBLIC_AUTH_ENDPOINT=https://local-auth-production.up.railway.app

# Security
JWT_SECRET=your-jwt-secret-key

# Optional - Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
ANALYTICS_ID=UA-XXXXXXXXX-X
LOG_LEVEL=info
